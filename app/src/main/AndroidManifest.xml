<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ezinvoicebusiness">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/logo"
        android:label="@string/app"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EZInvoiceBusiness">
        <activity
            android:name=".CreateInvoiceActivity"
            android:exported="true" />
        <activity
            android:name=".MyInvoicesActivity"
            android:exported="true" />
        <activity
            android:name=".MyCustomersActivity"
            android:exported="true" />
        <activity
            android:name=".AccountDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="Fill out account details"></activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login to access the application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true"
            android:label="@string/enter_email"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"></activity>
    </application>

</manifest>